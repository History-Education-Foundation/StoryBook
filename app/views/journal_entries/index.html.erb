<div class="max-w-2xl mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4">Your Journal Entries</h1>

  <div class="mb-4">
    <a href="<%= new_journal_entry_path %>" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">New Entry</a>
  </div>

  <% if @journal_entries.any? %>
    <ul class="space-y-4">
      <% @journal_entries.each do |entry| %>
        <li class="border rounded p-4 bg-white shadow">
          <div class="flex justify-between">
            <h2 class="text-xl font-semibold"><%= link_to entry.title.presence || '(untitled)', journal_entry_path(entry), class: 'text-indigo-700 hover:underline' %></h2>
            <span class="text-gray-500 text-sm"><%= entry.created_at.strftime('%b %d, %Y') %></span>
          </div>
          <p class="mt-1 text-gray-700 line-clamp-2"><%= truncate(entry.body, length: 120) %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">No entries found. Create your first entry!</p>
  <% end %>
</div>

