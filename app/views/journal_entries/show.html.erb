<div class="max-w-2xl mx-auto mt-8">
  <div class="mb-6">
    <a href="<%= journal_entries_path %>" class="text-indigo-700 hover:underline">&larr; Back to Journal</a>
  </div>
  <h1 class="text-3xl font-bold mb-2"><%= @journal_entry.title.presence || '(untitled)' %></h1>
  <p class="text-gray-600 text-sm mb-5">Created: <%= @journal_entry.created_at.strftime('%b %d, %Y %I:%M%p') %></p>
  <div class="bg-white border shadow rounded p-6">
    <div class="prose max-w-none">
  <%= raw(@journal_entry.body.gsub(/\r\n?/, "\n").split(/\n/).map { |line| line.present? ? ERB::Util.html_escape(line) : "&nbsp;" }.map { |line| "<p>#{line}</p>" }.join.html_safe) %>
</div>
  </div>
  <div class="mt-6">
    <a href="<%= edit_journal_entry_path(@journal_entry) %>" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Edit Entry</a>
  </div>
</div>

