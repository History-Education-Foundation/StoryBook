<%= form_with(model: post, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: 'block font-semibold mb-1' %>
    <%= form.text_field :title, class: 'rounded border-gray-300 w-full' %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: 'block font-semibold mb-1' %>
    <%= form.text_area :body, class: 'rounded border-gray-300 w-full', rows: 5 %>
  </div>

  <div>
    <%= form.submit class: 'bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700' %>
  </div>
<% end %>
