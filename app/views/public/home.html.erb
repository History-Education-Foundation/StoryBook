<div class="min-h-screen bg-pink-200 px-4 py-8">
  <% if user_signed_in? %>
    <div class="mb-4 p-4 rounded bg-green-100 text-green-800 font-medium">
      You are signed in!
    </div>
    <div class="mb-8 p-4 bg-white rounded shadow">
      <h2 class="text-xl font-bold mb-2">Add a New Blog Post</h2>
      <%= render "posts/form", post: Post.new %>
    </div>
  <% end %>
  <div class="bg-white rounded shadow p-4">
    <h2 class="text-xl font-bold mb-4">Recent Blog Posts</h2>
    <% Post.order(created_at: :desc).limit(10).each do |post| %>
      <div class="mb-4">
        <h3 class="font-semibold text-lg"><%= link_to post.title, post_path(post) %></h3>
        <p class="text-gray-700 truncate"><%= post.body.truncate(100) %></p>
        <% if user_signed_in? && current_user == post.user %>
          <div class="space-x-2 mt-1">
            <%= link_to 'Edit', edit_post_path(post), class: 'text-indigo-600 hover:underline' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
