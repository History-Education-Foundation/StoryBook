  // Helper function to get icon for tool
  function getToolIcon(toolname) {
    const iconMap = {
      'list_books': 'üìö',
      'list_chapters': 'üìñ',
      'list_pages': 'üìÑ',
      'create_book': '‚ú®',
      'create_chapter': '‚ûï',
