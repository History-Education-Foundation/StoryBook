<div id="<%= dom_id user %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= user.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Role:</strong>
    <span class="inline-block px-2 py-1 rounded text-xs font-semibold
      <%= case user.role
        when 'admin' then 'bg-red-100 text-red-800 border border-red-300'
        when 'staff' then 'bg-blue-100 text-blue-800 border border-blue-300'
        when 'student' then 'bg-green-100 text-green-800 border border-green-300'
        else 'bg-gray-100 text-gray-600 border border-gray-200' end %>">
      <%= user.role.titleize.presence || 'Student' %>
    </span>
  </div>
</div>
